<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05">

        <SeekBar
            android:id="@+id/barra"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/texto_barra"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/texto_barra"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:indeterminate="false"
            android:max="10"
            android:mirrorForRtl="false"
            android:progress="0"
            android:progressTint="@color/orange"
            android:thumbTint="@color/texto" />

        <TextView
            android:id="@+id/texto_barra"
            android:layout_width="73dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/texto_puntaje"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_weight="0.10"
            android:gravity="center_vertical|center_horizontal"
            android:text="0/10"
            android:textColor="@color/texto"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/texto_puntaje"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="asdasd"
            android:textColor="@color/texto"
            android:textSize="20dp"
            android:layout_below="@+id/barra"
            android:layout_alignLeft="@+id/barra"
            android:layout_alignStart="@+id/barra"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/texto_barra"
            android:layout_toStartOf="@+id/texto_barra" />
    </RelativeLayout>

</LinearLayout>